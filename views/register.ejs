        /* Animation for alerts */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .alert-animate {
            animation: fadeIn 0.3s ease-out forwards;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col bg-gray-100">
    <header class="bg-blue-600 text-white py-2">
        <div class="container mx-auto px-2 flex items-center justify-between">
            <a href="/" class="text-2xl font-bold text-white py-2 px-0 rounded-full transition duration-300">
                TravelWise
            </a>
        </div>
    </header>

    <main class="flex-grow flex items-center justify-center px-4 py-12">
        <div class="bg-white rounded-lg shadow-xl overflow-hidden max-w-4xl w-full flex">
            <div class="w-1/2 hero-pattern p-12 text-white hidden md:block">
                <h2 class="text-3xl font-bold mb-4">Добре дошли в TravelWise</h2>
                <p class="mb-6">Регистрирайте се, за да откриете невероятни пътешествия и да планирате своята следваща мечтана ваканция.</p>
                <ul class="list-disc list-inside">
                    <li>Ексклузивни оферти</li>
                    <li>Персонализирани препоръки</li>
                    <li>Лесно планиране на пътувания</li>
                </ul>
            </div>
            <div class="w-full md:w-1/2 p-12">
                <h1 class="text-3xl font-bold mb-6 text-gray-800 flex items-center justify-center">Регистрация</h1>
                <!-- Success message section -->
                <% if (locals.success) { %>
                  <div id="successAlert" class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 relative alert-animate" role="alert">
                      <div class="flex items-center">
                          <div class="mr-3">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                              </svg>
                          </div>
                          <p class="text-sm"><%= success %></p>
                          <button type="button" class="absolute top-0 right-0 mt-4 mr-4" onclick="document.getElementById('successAlert').style.display='none'">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                              </svg>
                          </button>
                      </div>
                  </div>
              <% } %>
                <!-- Error message section -->
                <% if (locals.error) { %>
                  <div id="errorAlert" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 relative alert-animate" role="alert">
                      <div class="flex items-center">
                          <div class="mr-3">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                              </svg>
                          </div>
                          <p class="text-sm"><%= error %></p>
                          <button type="button" class="absolute top-0 right-0 mt-4 mr-4" onclick="document.getElementById('errorAlert').style.display='none'">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                              </svg>
                          </button>
                      </div>
                  </div>
              <% } %>
                <form action="/register" method="POST">
                    <div class="mb-6">
                      <label
                        for="first_name"
                        class="block text-gray-700 text-sm font-bold mb-2"
                        >Име</label
                      >
                      <input
                        type="text"
                        id="first_name"
                        name="first_name"
                        class="shadow-sm appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500 transition duration-300"
                        required
                      />
                    </div>
                    <div class="mb-6">
                      <label
                        for="last_name"
                        class="block text-gray-700 text-sm font-bold mb-2"
                        >Фамилия</label
                      >
                      <input
                        type="text"
                        id="last_name"
                        name="last_name"
                        class="shadow-sm appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500 transition duration-300"
                        required
                      />
                    </div>
                    <div class="mb-6">
                      <label
                        for="email"
                        class="block text-gray-700 text-sm font-bold mb-2"
                        >Email</label
                      >
                      <input
                        type="email"
                        id="email"
                        name="email"
                        class="shadow-sm appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500 transition duration-300"
                        required
                      />
                    </div>
                    <div class="mb-6">
                      <label
                        for="password"
                        class="block text-gray-700 text-sm font-bold mb-2"
                        >Парола</label
                      >
                      <input
                        type="password"
                        id="password"
                        name="password"
                        class="shadow-sm appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500 transition duration-300"
                        required
                      />
                    </div>
                    <div class="flex items-center justify-between">
                        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-full focus:outline-none focus:shadow-outline transition duration-300">
                            Регистрация
                        </button>
                        <a href="/signin" class="inline-block align-baseline font-bold text-sm text-blue-600 hover:text-blue-800">
                            Вече имате акаунт?
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="bg-gray-800 text-white py-4">
        <div class="container mx-auto px-4 text-center">
            <p>&copy; 2025 TravelWise. Всички права запазени.</p>
        </div>
    </footer>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
          // Function to handle alerts
          function setupAlert(alertId, redirectUrl) {
              const alert = document.getElementById(alertId);
              if (alert) {
                  // Auto-hide after 3 seconds
                  setTimeout(function() {
                      alert.style.opacity = '0';
                      alert.style.transition = 'opacity 0.5s ease-in-out';
                      setTimeout(function() {
                          alert.style.display = 'none';
                          
                          // If this is a success alert and we have a redirect URL, redirect after hiding
                          if (alertId === 'successAlert' && redirectUrl) {
                              window.location.href = redirectUrl;
                          }
                      }, 500);
                  }, 3000);
              }
          }
          
          // Setup error alert
          setupAlert('errorAlert');
          
          // Setup success alert with redirect
          setupAlert('successAlert', '/signin');
      });
  </script>
</body>
</html>